mixin btn-cross(title, type, href)
	- var defaultHref = '';
	if href
		- defaultHref = href;
	else
		- defaultHref = '#';
	
	if type === "link"
		+b.A.btn._cross(href=defaultHref)&attributes(attributes)
			span.fl
			span.sfl
			span.cross
			i
			p=title
	else if type === 'button'
		+b.BUTTON.btn._cross&attributes(attributes)
			span.fl
			span.sfl
			span.cross
			i
			p=title