mixin css(src)
	link(href=src rel="stylesheet")
mixin js(src)
	script(src=src)

mixin add-meta(title, description, url, image)
	if title
		title=title
		meta(property="og:title" content=title)
	if description
		meta(itemprop="description" content=description)
		meta(property="og:description" content=description)
	if url
		meta(property="og:url" content=url)
		meta(property="og:type" content="website")
	if image
		meta(property="og:image" content=image)
		meta(property="og:image:type" content="image/jpeg")
		meta(property="og:image:width" content="1000")
		meta(property="og:image:height" content="330")

mixin menu-item(isLink,href, name)

	- var menuItemClass = '';
	if wordpress
		- menuItemClass = 'menu-item';
	else
		- menuItemClass = themePrefix + themeNav + '__menu-item'; 

	li(class=menuItemClass)
		if isLink === 'true'
			a( href=href )=name
		else
			block

mixin hamburger(type)
	if type == '1'
		+b.hamburger._effect-1(type="button" id="js-nav-hamburger")
			+e.SPAN.lines
				span Line1
				span Line2
				span Line3
	else if type == '2'
		+b.hamburger._effect-2(type="button" id="js-nav-hamburger")
			+e.SPAN.lines
				span
				span
				span
				span

mixin case(image, title, content, category, link)
	+b.case.col-12.col-sm-6.col-md-4
		+e.inner
			+e.A.link(src=link)
				+e.DIV.header
					+e.IMG.header-image(src=image)
				+e.DIV.content
					+e.body
						+e.P.subtitle=category
						+e.P.title=title
						+e.body-content
							p=content
					+e.footer
						+e.SPAN.link.btn._plus
							i
							p more
mixin form()
	+b.FORM.form._block
		+e.content
			+e.row._line
				+e.INPUT.control(name="vname" type="text" placeholder="Name")
				+e.SPAN.line
			+e.row._line
				+e.INPUT.control(name="vemail" type="email" placeholder="E-mail")
				+e.SPAN.line
			+e.row._line
				+e.INPUT.control(name="vphone" type="phone" placeholder="Phone")
				+e.SPAN.line
			+e.row
				+btn-cross('Send', 'button')(class="_cross-brand-1 _size-lg" type="submit")

