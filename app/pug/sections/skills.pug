include ../bem/index
include ../helpers/config
block variables
	-
		var skills = [
			'HTML5',
			'CSS3',
			'LESS',
			'Bootstrap',
			'JS',
			'jQ',
			'Gulp',
			'PHP',
			'PUG',
			'WP',
			'Stylus',
			'SASS',
			'postCSS',
			'REACT(study)'
		];
		
+b.SECTION.skills.section-anchor#section-skills
	+e.shape._right.shape__._brand-1._transparent(data-emergence="hidden")
		+e.inner
			+e.inner-shape._brand-1
	+e.container.container
		+b.row
			+b.col-12.col-sm-6
				+b.title-group
					+e.H3.title.title-lg My<br>Skills
					+e.content
						+b.P.title-md
							| And what can you be 
							+b.SPAN.highlight._brand-1 proud of?
		+e.monitor
			+e.monitor-inner
				+e.IMG.monitor-img(src="img/skills/monitor.png")
				+e.monitor-area
					+e.monitor-list
						for skill in skills
							+e.monitor-list-element=skill
		+e.P.letters-bg.letters-bg(data-emergence="hidden") I am Perfect